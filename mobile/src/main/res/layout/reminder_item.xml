<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="?android:selectableItemBackground"    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/rm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is an example"
        android:textSize="18dp"
        android:lines="1"
        android:textColor="@color/grey700"
        />

    <TextView
        android:id="@+id/rm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is an "
        android:layout_below="@+id/rm_time"
        android:textSize="12dp"
        android:lines="1"
        android:ellipsize="end"


        android:layout_marginTop="5dp"
        android:textColor="@color/grey600"
        />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:id="@+id/rm_switch"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>